{
  "name": "agentsmith",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:api": "bun run --watch packages/api/src/index.ts",
    "build:api": "bun build --target=bun --outdir=packages/api/dist packages/api/src/index.ts",
    "test": "bun test",
    "test:api": "bun test packages/api",
    "lint": "bunx biome check .",
    "format": "bunx biome format --write .",
    "typecheck": "bun run typecheck:shared && bun run typecheck:api && bun run typecheck:canvas",
    "typecheck:shared": "tsc --noEmit -p packages/shared",
    "typecheck:api": "tsc --noEmit -p packages/api",
    "typecheck:canvas": "tsc --noEmit -p packages/canvas",
    "dev:canvas": "bun run --watch packages/canvas/src/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@types/bun": "latest",
    "typescript": "latest"
  }
}
